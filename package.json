{
  "name": "docalign",
  "version": "0.1.0",
  "private": true,
  "description": "Documentation-reality alignment engine",
  "main": "dist/app.js",
  "bin": {
    "docalign": "./dist/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate:up": "node-pg-migrate up --migrations-dir migrations --tsconfig tsconfig.json --ignore-pattern \"_|^\\.\"",
    "migrate:down": "node-pg-migrate down --count 1 --migrations-dir migrations --tsconfig tsconfig.json --ignore-pattern \"_|^\\.\"",
    "migrate:create": "node-pg-migrate create --migrations-dir migrations --migration-file-language ts --template-file-name migrations/_template.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@octokit/auth-app": "^6.1.0",
    "@octokit/rest": "^20.1.0",
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.25.0",
    "express": "^4.21.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.0",
    "node-pg-migrate": "^7.7.0",
    "pg": "^8.13.0",
    "pino": "^8.21.0",
    "pino-http": "^9.0.0",
    "tree-sitter-javascript": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "tree-sitter-typescript": "^0.23.2",
    "web-tree-sitter": "^0.26.5",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.17.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.13.0",
    "prettier": "^3.3.0",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.11.0",
    "vitest": "^2.1.0"
  }
}
